@model RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <h2 class="mb-4">Recuperación de Constraseña</h2>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group mt-2 mb-3">
                <input type="submit" value="Recuperación de Contraseña" class="btn btn-outline-primary" />
                <a asp-action="Login" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>

        <div class="text-success mt-3">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}