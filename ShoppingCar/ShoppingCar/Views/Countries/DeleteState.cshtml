@model State

@{
    ViewData["Title"] = "Borrar estado";
}

<h1>Borrar</h1>

<h3>¿Estas seguro de que deseas eliminar este estado?</h3>

<div>
    <partial name="_StateDetails" model="@Model"/>
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model.Country.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>