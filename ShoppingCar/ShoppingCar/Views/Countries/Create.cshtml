@model Country

@{
    ViewData["Title"] = "Crear país";
}

<h1>Crear</h1>
<h4>País</h4>

<hr />

<flash dismissable="true" />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.States"/>

            <partial name="_Country" model="@Model"/>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary col-md-5 offset-1" />
                <a asp-action="Index" class="btn btn-outline-success col-md-5">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}