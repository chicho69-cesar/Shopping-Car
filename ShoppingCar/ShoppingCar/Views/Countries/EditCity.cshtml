@model CityViewModel

@{
    ViewData["Title"] = "Editar ciudad";
}

<h1>Editar</h1>
<h4>Ciudad</h4>

<hr />

<flash dismissable="true" />

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StateId" />

            <partial name="_City" model="@Model"/>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary col-md-5 offset-1" />
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success col-md-5">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}